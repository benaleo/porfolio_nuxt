# Prisma Accelerate connection (runtime)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=${PRISMA_API_KEY}"
# Prisma Accelerate API key
PRISMA_API_KEY="your_accelerate_api_key"

# Direct database URL for migrations (NOT via Accelerate)
# Example: postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/yourdb?schema=public"

# Admin credentials for CMS login
ADMIN_USERNAME="yourusername"
ADMIN_PASSWORD="yourpassword"

# JWT secret for signing session tokens
JWT_SECRET="replace-with-a-strong-random-secret"

# Optional site URL
SITE_URL="http://localhost:3000"

# Contact form (existing)
FORMSPREE_ENDPOINT=""
